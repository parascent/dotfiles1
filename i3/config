# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize grow width 5 px or 5 ppt
        bindsym j resize shrink height 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


mode "gapsinner" {
        bindsym Left gaps inner current minus 5
        bindsym Right gaps inner current plus 5
        bindsym Up gaps inner current plus 5
        bindsym Down gaps inner current minus 5
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "gapsouter" {
        bindsym Left gaps left current minus 5
        bindsym Right gaps right current minus 5
        bindsym Up gaps top current minus 5
        bindsym Down gaps bottom current minus 5
        bindsym Shift+Left gaps left current plus 5
        bindsym Shift+Right gaps right current plus 5
        bindsym Shift+Up gaps top current plus 5
        bindsym Shift+Down gaps bottom current plus 5
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+F1 mode gapsinner
bindsym $mod+F2 mode gapsouter
bindsym $mod+F3  gaps horizontal  current plus 5
bindsym $mod+Shift+F3  gaps horizontal  current minus 5
bindsym $mod+F4  gaps vertical  current plus 5
bindsym $mod+Shift+F4  gaps vertical  current minus 5

set $Locker exec i3lock && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

